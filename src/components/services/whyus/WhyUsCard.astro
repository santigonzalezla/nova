---
import Button from "../../shared/Button.astro";

interface Props {
    title: string;
    description: string;
    color: string;
}

const { title, description, color } = Astro.props;
---
<div class="whyus-card" style=`background-color: ${color}`>
    <h4>{title}</h4>
    <p>{description}</p>
    <button>Reserva tu Cita!</button>
</div>

<style>
    .whyus-card
    {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-radius: 10px;
        gap: 10px;
        padding: 40px 60px 30px 40px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .whyus-card h4
    {
        font-size: 20px;
        font-weight: 700;
    }

    .whyus-card p
    {
        font-size: 16px;
        font-weight: 300;
        color: var(--light-gray);
    }

    button
    {
        margin-top: 5px;
        font-family: 'Satoshi', sans-serif;
        color: white;
        width: 160px;
        height: 40px;
        font-size: 16px;
        font-style: normal;
        font-weight: 300;
        padding: 12px 25px;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: none;
        cursor: pointer;
        transition: 0.3s ease-in-out;
        background: var(--gradient);
    }

    button:hover
    {
        transform: scale(1.1);
    }

    @media screen and (max-width: 768px)
    {
        .whyus-card
        {
            padding: 20px 30px 20px 30px;
        }

        .whyus-card h4
        {
            font-size: 18px;
        }

        .whyus-card p
        {
            font-size: 14px;
        }

        button
        {
            width: 140px;
            height: 35px;
            font-size: 14px;
            padding: 10px 20px;
        }

    }
</style>