---


<section id="projects" class="projects">
    <div class="projects-top">
        <h3>Conoce los servicios que podemos ofrecerte</h3>
        <h2>Convierte tu visión en realidad</h2>
    </div>
    <div class="projects-bottom">
        {work.map((project) => (
            <ProjectCard
                title={project.title}
                image={project.image}
                time={project.time}
                cost={project.cost}
                type={project.type}
            />
        ))}
    </div>
</section>

<style>
    .projects
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 60px;
        padding: 70px 100px;
    }

    h3
    {
        font-size: 20px;
        font-weight: 700;
        color: var(--orange);
        text-align: center;
        width: 100%;
    }

    h2
    {
        width: 100%;
        text-align: center;
        font-size: 40px;
        font-weight: 700;
    }

    .projects-bottom
    {
        display: grid;
        grid-template-columns: repeat(2, minmax(300px, 1fr));
        gap: 20px;
        width: 100%;
        justify-content: center;
    }

    @media screen and (max-width: 768px)
    {
        .projects
        {
            padding: 40px 20px;
            gap: 20px;
        }

        .projects h2
        {
            font-size: 36px;
        }

        .projects h3
        {
            font-size: 16px;
        }

        .projects-bottom
        {
            grid-template-columns: repeat(1, 1fr);
        }
    }
</style>