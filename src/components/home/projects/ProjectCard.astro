---
interface Props {
    title: string;
    time: string;
    cost: string;
    type: string;
    image: string;
}

const { title, time, cost, type, image } = Astro.props;
---

<div class="project-card">
    <img loading="lazy" src={image} alt={title}/>
    <h3>{title}</h3>
    <div class="project-card-info">
        <div>
            <h4>Tiempo Requerido:</h4>
            <p>{time}</p>
        </div>
        <div>
            <h4>Costo Estimado:</h4>
            <p>{cost}</p>
        </div>
        <div>
            <h4>Tipo de Proyecto:</h4>
            <p>{type}</p>
        </div>
    </div>
</div>

<style>
    .project-card
    {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: #202329;
        padding: 30px;
        gap: 15px;
        border-radius: 20px;
        cursor: pointer;
        color: #FFF;
    }

    .project-card h3
    {
        width: 100%;
        text-align: left;
        font-size: 20px;
        font-weight: 700;
    }

    .project-card h4
    {
        font-weight: 300;
    }

    .project-card p
    {
        font-size: 20px;
        background-image: linear-gradient(to right, #8200ff, #e400c0, #FF4200, #FF4200, #FF4200);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
    }

    .project-card img
    {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 20px;
        transition: all 0.3s ease-in-out;
    }

    .project-card-info
    {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    @media screen and (max-width: 768px)
    {
        .project-card
        {
            padding: 20px;
        }

        .project-card img
        {
            height: 200px;
        }

        .project-card h3
        {
            font-size: 18px;
        }

        .project-card p
        {
            font-size: 13px;
        }

        .project-card-info
        {
            gap: 10px;
        }

        .project-card-info h4
        {
            font-size: 14px;
        }
    }
</style>